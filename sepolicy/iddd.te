# iddd
type iddd, domain;
type iddd_exec, exec_type, file_type;

# Started by init
init_daemon_domain(iddd)

allow iddd idd_data_file:dir { add_name open read remove_name search write };
allow iddd idd_data_file:file { create getattr lock open read rename unlink write };
allow iddd idd_data_file:sock_file { create setattr unlink };
allow iddd iddd_exec:file execmod;
allow iddd system_data_file:lnk_file read;
allow iddd system_file:file execmod;
